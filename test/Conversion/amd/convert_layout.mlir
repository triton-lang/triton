  // CHECK-LABEL: convert_layout_2_way_v_perm_8x8
  tt.func @convert_layout_2_way_v_perm_8x8(%arg0: tensor<64x64xi8, #blocked>, %arg1: tensor<64x64x!tt.ptr<i8>, #linear>) {
